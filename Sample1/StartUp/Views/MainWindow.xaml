<Window x:Class="Sample1.StartUp.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Title="{Binding Title.Value}" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="0.7*" />
        </Grid.ColumnDefinitions>
        <ToolBar Grid.Row="0" Grid.ColumnSpan="3" />
        <ContentControl Grid.Row="1" Grid.Column="0" prism:RegionManager.RegionName="NaviTree" />
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
        <ContentControl Grid.Row="1" Grid.Column="2" prism:RegionManager.RegionName="EditorArea" />
        <StatusBar Grid.Row="2" Grid.ColumnSpan="3">
            <StatusBarItem />
            <StatusBarItem />
            <StatusBarItem />
        </StatusBar>
    </Grid>
</Window>
