<metro:MetroWindow x:Class="Sample1.StartUp.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:livet="http://schemas.livet-mvvm.net/2011/wpf"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    TitleCharacterCasing="Normal"
    SaveWindowPosition="True"
    GlowBrush="{DynamicResource AccentColorBrush}"
    BorderThickness="1"
    Title="{Binding Title.Value}" Height="350" Width="525">
    <!--Windowを閉じたときにViewModelsをDisposeする-->
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <livet:DataContextDisposeAction />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="0.7*" />
        </Grid.ColumnDefinitions>
        <ToolBar Grid.Row="0" Grid.ColumnSpan="3" />
        <ContentControl Grid.Row="1" Grid.Column="0" IsTabStop="False" prism:RegionManager.RegionName="NaviTree" />
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
        <ContentControl Grid.Row="1" Grid.Column="2" IsTabStop="False" prism:RegionManager.RegionName="EditorArea" />
        <StatusBar Grid.Row="2" Grid.ColumnSpan="3">
            <StatusBarItem />
            <StatusBarItem />
            <StatusBarItem />
        </StatusBar>
    </Grid>
</metro:MetroWindow>
